{% extends 'admin/base.html.twig' %}

{% block title %}{{ partner.name }}{% endblock %}

{% block body %}
    <div class="container text-primary-dark">
        <h1 class="mt-5 mb-0 text-center text-lg-left">Toutes les infos sur notre partenaire</h1>

        <hr class="mt-2 mb-5">

        <a href="{{ path('partner_index') }}" class="mt-3 mb-3 btn btn-secondary">
            <i class="mr-2 fas fa-share"></i> Retour au menu
        </a>

        <div class="row mt-5 d-flex justify-content-center">
            <div class="col-md-8">
                <div class="admin-partner-show shadow p-3 mb-5 bg-white rounded">
                    <h3 class="pl-5 pt-4 pb-3">{{ partner.name }}</h3>

                    <img src="{% if partner.filenamePartner is empty %}
                                    {{ asset('build/logo-eureka.png') }}
                            {% else %}
                                    {{ vich_uploader_asset(partner, 'partnerFile') }}
                                {% endif %}"
                         alt="{{ partner.filenamePartner }}" class="mx-auto pb-4">

                    <p class="pl-3 pb-3 text-muted">
                        <small>{{ partner.presentation }}</small>
                    </p>
                    <p class="link text-muted text-right">
                        <small>
                            Mis Ã  jour le {{ partner.updatedAt ? partner.updatedAt|date('d-m-Y H:i:s') : '' }}
                        </small>
                    </p>
                    <p class="text-right">
                        <small>
                            {{ partner.link }}
                        </small>
                    </p>
                    <div class="pt-3">
                        <a href="{{ path('partner_edit', {id: partner.id}) }}" class="btn btn-primary-dark">Modifier</a>
                        <a href="#" onclick="event.preventDefault(); confirm('Etes-vous certain ?') &&
    document.getElementById('js-partner-delete-form').submit();" class="btn btn-danger">Supprimer</a>

                        <form id="js-partner-delete-form" action="{{ path('partner_delete', {id: partner.id}) }}"
                              method="post"
                              style="display: none;">
                            <input type="hidden" name="csrf_token"
                                   value="{{ csrf_token('partner_deletion_' ~ partner.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
