{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    {% include 'home/_top-banner.html.twig' %}

    <div class="p-0 container d-flex justify-content-center flex-wrap text-center">
        <div class="mb-5 col-12 col-lg-5 d-flex flex-column justify-content-between">
            <h2 class="mb-3 text-primary-dark">Prochaines activités</h2>
            {% include 'home/_sidebar_events.html.twig' %}
        </div>

        <div class="col-12 offset-lg-2 col-lg-4 d-flex flex-column justify-content-between row">

            <img class="mb-5 mx-auto logo-olivet" src="{{ asset('build/logo-olivet.png') }}" alt="logo olivet">
            <div class="p-3 bg-primary rounded shadow">
                <h2 class="mb-3 text-light">Nous contacter</h2>
                {% include 'home/_info-contact.html.twig' %}
            </div>
            <div class="my-5 p-3 text-light bg-primary rounded shadow">
                <h2 class="m-0">Newsletters des activités</h2>
                {{ render(path('subscribe_newsletter')) }}
            </div>
        </div>
    </div>

    <h2 id="location" class="mt-4 mb-2 text-primary-dark text-center">Où nous trouver ?</h2>
    {% include 'home/_access-info.html.twig' %}

    {% if partners %}
        <h2 id="partners" class="mt-4 mb-2 text-primary-dark text-center mt-5">Nos partenaires</h2>
    {% endif %}
    {% include 'home/_partners.html.twig' %}

{% endblock %}
